   </teiHeader>
   <text>
      <body>
         <div type="index_persons">
            <listPerson xml:id="listperson">
            {% for x in objects %}
               <person xml:id="{{ x.key }}">
                  <persName type="main">{{ x.lemma }}</persName>
                  {% for y in x.variations %}
                  <persName type="variation">{{ y }}</persName> 
                  {% endfor %}                
                  <noteGrp>
                  {% for z in x.files %}
                     <note type="mentions" target="{{z.file}}" n="{{ z.count }}">{{ z.count }} {% if z.count == 1 %}Erwähnung{% else %}Erwähnungen{% endif %} in der Datei {{z.file}}</note>
                     {% endfor %}
                     <note type="mentions" n="{{x.totalcount}}">{{x.totalcount}} Erwähnungen gesamt</note>
                  </noteGrp>
               </person>
            {% endfor %}
            </listPerson>
         </div>
      </body>
   </text>
</TEI>
